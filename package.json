{
  "name": "dont-commit-that",
  "displayName": "Don't Commit That!",
  "description": "Prevent accidental commits of secrets",
  "publisher": "RushikeshKadepurkar",
  "version": "0.0.1",
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "dont-commit-that",
    "commit",
    "security",
    "secret-detection",
    "credentials",
    "api-key",
    "token",
    "password",
    "git",
    "pre-commit",
    "linter",
    "devops",
    "compliance",
    "scanning"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RushiK8626/dont-commit-that"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dontCommitThat.installGitHook",
        "title": "Don't Commit That: Install Git Pre-Commit Hook"
      }
    ],
    "configuration": {
      "title": "Don't Commit That: Custom Patterns",
      "properties": {
        "dontCommitThat.customPatterns": {
          "type": "array",
          "default": [],
          "description": "User defined custom patterns",
          "items": {
            "type": "object",
            "required": ["type", "regex"],
            "properties": {
              "name": { "type": "string" },
              "regex": { "type": "RegExp" },
              "description": { "type": "string" },
              "flags": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
